@model IEnumerable<libraryManagementSystem.Models.Book>

<h2>All Books</h2>
<form method="get" asp-action="Index" class="mb-3">
    <input type="text" name="search" value="@ViewBag.Search" placeholder="Search by title or author" class="form-control" style="max-width:300px;display:inline-block;" />
    <button type="submit" class="btn btn-secondary">Search</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Genre</th>
            <th>Available</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.ISBN</td>
            <td>@book.Genre</td>
            <td>@(book.IsAvailable ? "Yes" : "No")</td>
        </tr>
    }
    </tbody>
</table>
<a class="btn btn-primary" asp-action="Add">Add new book</a>
